# ==============================
# DATABASE (TiDB / MySQL compatível)
# ==============================

# Endereço do servidor do banco de dados
DB_HOST=your-database-host.com

# Porta de conexão com o banco (ex: 3306 para MySQL, 4000 para TiDB)
DB_PORT=4000

# Usuário do banco de dados
DB_USERNAME=database_user.root

# Senha do banco de dados
DB_PASSWORD=strong_password_here

# Nome do banco de dados da aplicação
DB_DATABASE=your_database_name


# ==============================
# AUTHENTICATION / SECURITY
# ==============================

# Chave secreta usada para assinar e validar JWTs
# Use uma string longa e aleatória em produção
JWT_SECRET=your_jwt_secret_key_here


# ==============================
# LOGS (Better Stack / Logtail)
# ==============================

# Token do serviço de logs (Better Stack / Logtail)
LOGTAIL_TOKEN=your_logtail_token_here

# URL de ingestão dos logs
LOGTAIL_INGEST_URL=https://your-region.betterstackdata.com

# Nome da aplicação exibido no painel de logs
LOGTAIL_APP_NAME=YourAppName


# ==============================
# EMAIL (SMTP / Gmail)
# ==============================

# Email usado para envio de mensagens (ex: recuperação de senha)
MAIL_USER=example@gmail.com

# Senha de app do email (NÃO use sua senha pessoal)
MAIL_PASS=your_email_app_password


# ==============================
# FRONTEND URLS
# ==============================

# URL do frontend em ambiente local
LOCALHOST=http://localhost:5173

# URL do frontend em produção
PROD_FRONTEND=https://your-frontend.onrender.com

# URL local acessível por outros dispositivos na mesma rede
# Descubra o IP com:
# Windows: ipconfig
# Linux/Mac: ifconfig ou ip a
LOCAL_FRONTEND=http://192.168.0.100:5173


# ==============================
# ENVIRONMENT
# ==============================

# Define se o ambiente é de desenvolvimento
# true  -> desenvolvimento
# false -> produção
isDev=true
